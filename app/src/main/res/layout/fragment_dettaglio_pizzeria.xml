<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:padding="6dp">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_nome_pizzeria" android:textStyle="bold|italic"
            android:textAlignment="center" android:layout_gravity="center_horizontal"  android:freezesText="true"/>

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_indirizzo"
            android:layout_marginBottom="2dp"  android:freezesText="true"/>

        <RatingBar
            android:layout_width="wrap_content" android:layout_height="24dp" style = "?android:attr/ratingBarStyleSmall"
            android:numStars="5" android:stepSize="0.5"  android:rating="0"
            android:id="@+id/rating_pizzeria" android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content" android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Pizzaiolo: "
            android:id="@+id/text_pizzaiolo"  android:freezesText="true"/>

        <TextView
            android:layout_width="wrap_content" android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Titolare: "
            android:id="@+id/text_proprietario"  android:freezesText="true"/>

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Chiusura: " android:id="@+id/textView_chiusura"
            android:gravity="left"  android:freezesText="true"
            android:layout_margin="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <Button
                android:layout_width="0dp" android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_tel1"
                android:layout_marginBottom="3dp" android:clickable="true"  android:freezesText="true"/>
            <Button
                android:layout_width="0dp" android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_tel2"  android:freezesText="true"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" android:weightSum="1"
            android:layout_marginTop="-6dp"
            android:layout_marginBottom="-6dp">

            <CheckBox
                android:layout_width="0dp" android:layout_weight="0.5"
                android:layout_height="wrap_content" android:text="Celiaci"
                android:id="@+id/checkBox_celiaci" android:layout_row="0"
                android:layout_column="0" android:checked="false" android:clickable="false" />

            <CheckBox
                android:layout_width="0dp" android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Filone"
                android:id="@+id/checkBox_filone"
                android:layout_row="1"
                android:layout_column="1"
                android:checked="false" android:clickable="false"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" android:weightSum="1"
            android:layout_marginTop="-6dp"
            android:layout_marginBottom="-6dp">
            <CheckBox
                android:layout_width="0dp" android:layout_weight="0.5"
                android:layout_height="wrap_content" android:text="Farine a pietra"
                android:id="@+id/checkBox_farine_pietra" android:layout_row="0"
                android:layout_column="1" android:checked="false" android:clickable="false"/>


            <CheckBox
                android:layout_width="0dp" android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Boccone"
                android:id="@+id/checkBox_boccone"
                android:layout_row="2"
                android:layout_column="0"
                android:checked="false" android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" android:weightSum="1"
            android:layout_marginBottom="-6dp"
            android:layout_marginTop="-6dp">
            <CheckBox
                android:layout_width="0dp" android:layout_weight="0.5" android:layout_height="wrap_content"
                android:text="Lievito madre" android:id="@+id/checkBox_lievito_madre"
                android:layout_row="1" android:layout_column="0"
                android:checked="false" android:clickable="false"/>

            <CheckBox
                android:layout_width="0dp" android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Birre art."
                android:id="@+id/checkBox_birre_art"
                android:layout_row="2"
                android:layout_column="0"
                android:checked="false" android:clickable="false"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Forno: "
            android:id="@+id/text_forno"
            android:freezesText="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Numero impasti: " android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_num_impasti"
            android:freezesText="true"
            android:layout_margin="2dp" />

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Conto:" android:id="@+id/textView_conto"
            android:freezesText="true"
            android:layout_margin="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Recensione del "
            android:id="@+id/textView_recensione"  android:freezesText="true"
            android:layout_margin="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rivalutazione del "
            android:id="@+id/textView_rivalutazione"  android:freezesText="true"
            android:layout_margin="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="0.5">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageViewSite"
                    android:layout_weight="0.5"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/logomau"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Recensione"
                    android:id="@+id/textView13"
                    android:layout_gravity="center_horizontal|bottom" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="0.5">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageViewMap"
                    android:layout_weight="0.5"
                    android:src="@drawable/iconmaps"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Mappa"
                    android:id="@+id/textView14"
                    android:layout_gravity="center_horizontal|bottom" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>