<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/tema"
    android:orientation="vertical" tools:context=".MainActivity"
    android:id="@+id/main_layout"
    >


    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/imageMau"
        android:src="@drawable/logomau"
        android:contentDescription="@string/logomau"
        android:layout_gravity="top"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:id="@+id/imagepizza"
        android:src="@drawable/logopizzabuonamini"
        android:layout_gravity="center_horizontal|bottom"
        android:clickable="true"
        android:layout_marginTop="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Entra"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="-12dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.25">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageViewPomodoro"
                android:clickable="true"
                android:src="@drawable/pomodori"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pomodoro"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal|bottom" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.25">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageViewFarina"
                android:clickable="true"
                android:src="@drawable/farina"
                android:layout_gravity="center_horizontal|left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Farine"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal|bottom" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.25">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageViewLievito"
                android:clickable="true"
                android:src="@drawable/lievito"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Lievito"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal|bottom" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.25">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageViewMozzarella"
                android:clickable="true"
                android:src="@drawable/mozzarella"
                android:layout_gravity="center_horizontal|bottom|right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Mozzarella"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal|bottom|right" />

        </FrameLayout>

    </LinearLayout>

    <!--    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elenco pizzerie"
        android:id="@+id/button_elenco"
        android:layout_gravity="center_horizontal|bottom" />-->

</LinearLayout>